#!/bin/bash

extra=$PWD
directory=$(basename $extra)
project=../${directory%%_local}
ufo=${project}/results/ufo
src=${project}/source
wscript=${project}/wscript
nlci=$HOME/work/nlci/projects/fonts/scripts
# grep -E "faces|styles" $wscript | grep = > wscript.py
rm -f *.sfd

pushd ${src}
for sfd in *-?.sfd *-??.sfd
do
    echo $sfd
    fontforge -script ${nlci}/emsize.ff $sfd
done
popd

pushd ${project}
smith distclean -l
smith configure -l
smith build -l
popd

pushd ${ufo}
for ttf in *.ttf
do
    echo $ttf
    fontforge -script ${nlci}/ttf2sfd.ff $ttf
done
for sfd in *.sfd
do
    echo $sfd
    fontforge -script ${nlci}/emsize.ff $sfd
done
popd

sort -o cs/charis/pre.txt cs/charis/composite.txt cs/charis/decomposition.txt
sort -o cs/gentium/pre.txt cs/gentium/composite.txt cs/gentium/decomposition.txt
sort -o cs/exo/pre.txt cs/exo/composite.txt cs/exo/decomposition.txt
python addchars.py ${src}

rm -rf ${src}/*.ufo
# mv -v ${ufo}/*.ufo ${src}
# mv -v ${ufo}/*.sfd ${src}

pushd ${src}
for sfd in *-???*.sfd
do
    echo $sfd
    perl $HOME//script/zind/bin/codepoint2name.pl -c $sfd -n tmp.sfd -m ${extra}/glyphs_names.tsv
    mv tmp.sfd $sfd
done
for sfd in *-???*.sfd
do
    echo $sfd
    fontforge -script ${nlci}/sfd2ufo.ff $sfd
done
popd
